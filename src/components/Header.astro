---
import Login from "./login/login.astro";
import Nav from "./Nav.astro";
---

<header class="sticky top-0 z-50 border-b border-zinc-800 bg-zinc-950">
  <div class="container flex h-16 items-center justify-between px-4 md:px-6">
    <div class="flex items-center gap-4">
      <a href="/" class="flex items-center gap-4">
        <img
          src="/img/icon/pokecards_icon.webp"
          alt="PokeCards"
          class="h-9 w-9 inline"
        />
        <h1 id="inicio">Pok√©Cards</h1>
      </a>
      <Nav />
    </div>
    <div class="flex items-center gap-4">
      <div class="relative md:flex items-center">
        <input
          type="search"
          placeholder="Find a card..."
          class="w-[200px] lg:w-[250px] h-9 rounded-md bg-zinc-900 border-zinc-800 focus-visible:ring-zinc-700 focus-visible:ring-offset-zinc-900"
        />

        <button
          size="sm"
          variant="secondary"
          className="absolute right-0 h-9 rounded-l-none bg-yellow-500 hover:bg-yellow-600 text-black"
        >
          <!-- <Search className="h-4 w-4" /> -->
          <span class="sr-only">Search</span>
        </button>
      </div>

      <Login />
    </div>
  </div>
</header>

<style>
  header {
    color: white;
  }

  header h1 {
    display: inline-block;
    position: relative;
    z-index: 20;
    margin: 0;
  }
</style>
