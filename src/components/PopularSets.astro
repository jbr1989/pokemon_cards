// Sample data for popular sets
const popularSets = [
  {
    id: "base-set-unlimited",
    name: "Base Set Unlimited",
    image: "https://ext.same-assets.com/3897352764/907587978.webp",
    logoImage: "https://ext.same-assets.com/732696185/3633306326.webp",
    bgImage: "https://ext.same-assets.com/1090453301/1225050526.webp",
  },
  {
    id: "jungle",
    name: "Jungle",
    image: "https://ext.same-assets.com/2582912166/3139716049.webp",
    logoImage: "https://ext.same-assets.com/2582912166/3139716049.webp",
    bgImage: "https://ext.same-assets.com/3929352257/1039847648.webp",
  },
  {
    id: "evolving-skies",
    name: "Evolving Skies",
    image: "https://ext.same-assets.com/3834689006/1140895674.webp",
    logoImage: "https://ext.same-assets.com/3981808276/4150320722.webp",
    bgImage:
      "https://cdn.pokemonprice.com/sets/background/evolving-skies.webp?w=1200",
  },
  {
    id: "hidden-fates",
    name: "Hidden Fates",
    image: "https://ext.same-assets.com/2652055128/2435317165.webp",
    logoImage: "https://ext.same-assets.com/3851909488/2345085585.webp",
    bgImage: "https://ext.same-assets.com/2652055128/2435317165.webp",
  },
  {
    id: "paldean-fates",
    name: "Paldean Fates",
    image: "https://ext.same-assets.com/562160491/1629946271.webp",
    logoImage: "https://ext.same-assets.com/1761845301/2221364557.webp",
    bgImage: "https://ext.same-assets.com/320910323/3522561353.webp",
  },
];
---

<div
  class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 w-full"
>
  {
    popularSets.map((set) => (
      <a key={set.id} href={`/${set.id}`} className="w-full">
        <div class="pokemon-card h-full bg-zinc-900 border-zinc-800 overflow-hidden">
          <div class="relative h-36 w-full overflow-hidden">
            <img
              src={set.bgImage}
              alt={set.name}
              fill
              className="object-cover transition-transform hover:scale-110 duration-500"
              sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 to-transparent opacity-90" />
            <div class="absolute bottom-0 left-0 right-0 flex justify-center p-4">
              <img
                src={set.logoImage}
                alt={`${set.name} Logo`}
                width={120}
                height={60}
                class="h-auto max-h-16 w-auto max-w-[120px] object-contain"
              />
            </div>
          </div>
          <div class="p-4">
            <h3 class="text-center text-sm font-semibold text-white">
              {set.name}
            </h3>
          </div>
        </div>
      </a>
    ))
  }
</div>
