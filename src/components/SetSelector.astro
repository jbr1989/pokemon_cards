---
import { PokeSerieHandler } from '../handlers/PokeSerieHandler';

interface Props {
  language: string;
  selectedSetId: string;
}

const { language, selectedSetId } = Astro.props;

const series = await PokeSerieHandler.getAll(language, true);

---

<div class="set-selector">
  <label for="set">Select a Set:</label>
  <select id="set" name="set">
    {series?.map((serie) => (
      <optgroup label={serie.name}>
        {serie.sets.map((set) => (
          <option value={set.id} selected={set.id === selectedSetId}>
            {set.name} ({set.cardCount.total})
          </option>
        ))}
      </optgroup>
    ))}
  </select>
</div>

<style>
  .set-selector {
    margin-bottom: 2rem;
    text-align: center;
  }

  select {
    padding: 0.5rem 1rem;
    font-size: 1rem;
    border-radius: 0.5rem;
    background: #2a2a2a;
    color: white;
    border: 1px solid #444;
    margin-left: 1rem;
  }
</style>