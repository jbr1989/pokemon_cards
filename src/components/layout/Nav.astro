---
const currentPath = Astro.url.pathname;

console.log("Current Path", currentPath);

const navLinks = [
  { path: "/sets", img: "", label: "Sets" },
  // { path: "/cards", img: "", label: "Cards" },
  { path: "/explore", img: "", label: "Explore" },
  { path: "/you", img: "", label: "Your Cards" },
];

// const getLinkClass = (path: string) => currentPath === path ? 'nav-link active' : 'nav-link';
---

<div class="max-sm:hidden md:flex md:items-center flex-grow space-x-6 ml-6">
  {
    navLinks.map(({ path, img, label }) => (
      <a
        class="relative inline-block w-full h-full px-4 py-5 mx-2 font-medium leading-tight text-center md:py-2 group md:w-auto md:px-2 lg:mx-3 md:text-center text-white"
        href={path}
      >
        <span>{label}</span>
      </a>
    ))
  }
</div>

<div
  class="flex md:hidden items-center justify-center w-10 h-10 p-2 rounded-full cursor-pointer hover:bg-gray-200/10"
>
  <svg
    x-show="!showMenu"
    class="w-6 h-6 text-yellowish"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 16 16"
    fill="currentColor"
    aria-hidden="true"
    data-slot="icon"
  >
    <path
      fill-rule="evenodd"
      d="M2 3.75A.75.75 0 0 1 2.75 3h10.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 3.75ZM2 8a.75.75 0 0 1 .75-.75h10.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 8Zm0 4.25a.75.75 0 0 1 .75-.75h10.5a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1-.75-.75Z"
      clip-rule="evenodd"></path>
  </svg>
  <svg
    x-show="showMenu"
    class="w-6 h-6 text-yellowish"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 16 16"
    fill="currentColor"
    aria-hidden="true"
    data-slot="icon"
    style="display: none;"
  >
    <path
      d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94 5.28 4.22Z"
    ></path>
  </svg>
</div>
