---
import type { UserList } from "@/models/UserList";
import type { UserListCard } from "../../models/UserListCard";
import ErrorMessage from "../ErrorMessage.astro";
import ListCardGridItem from "./ListCardGridItem.astro";

interface Props {
  list: UserList | null;
  error: string | null;
}

const { list, error } = Astro.props;

const cardHaving = list?.cards?.filter((card) => card.cardName != "").length;
---

<div id="cards-div">
  <div class="cards-grid-header container">
    <div>
      <button
        onclick={`openListCardDialog(${list?.id})`}
        class="bg-blue-500 text-white px-2 rounded-md">+</button
      >
      <span
        >{cardHaving} / {list?.cards?.length} cards ({
          ((cardHaving / list?.cards?.length) * 100).toFixed(2)
        }%)</span
      >
    </div>
    <span>{""}</span>
    <div>Buscar por:</div>
  </div>

  <ErrorMessage error={error} />

  <div id="loading" class="loading hidden">Loading cards...</div>

  <div class="cards-grid container">
    {
      list?.cards && list?.cards?.length > 0 ? (
        list?.cards?.map((item) => (
          <ListCardGridItem listCard={item} listType={list?.type} />
        ))
      ) : (
        <div class="no-cards" style="grid-column: 1 / -1; text-align: center;">
          <h2>No cards found</h2>
          <p>Please select a different set.</p>
        </div>
      )
    }
  </div>
</div>

<script>
  document.querySelectorAll(".card-variant").forEach((variant) => {
    variant.addEventListener("click", () => {
      variant.classList.toggle("disabled");
    });
  });
</script>

<script defer src="/scripts/cardItemEffect.js"></script>

<style>
  .disabled {
    filter: grayscale(100%) opacity(50%);
  }

  .card-variants {
    display: flex;
    justify-content: center;
    text-align: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .card-variants img {
    display: block;
    width: 64px;
    height: 64px;
    cursor: pointer;
  }

  .holo-image {
    position: relative;
    border-radius: 50%; /* Opcional si la imagen no tiene fondo */
    overflow: hidden;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.6);
  }

  .holo-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(255, 0, 128, 0.4),
      rgba(255, 128, 0, 0.4),
      rgba(255, 255, 0, 0.4),
      rgba(128, 255, 0, 0.4),
      rgba(0, 255, 128, 0.4),
      rgba(0, 255, 255, 0.4),
      rgba(0, 128, 255, 0.4),
      rgba(128, 0, 255, 0.4),
      rgba(255, 0, 128, 0.4)
    );
    background-size: 400% 400%;
    /* animation: holo-move 3s infinite; */
    mix-blend-mode: screen; /* Combina los colores con la imagen */
    pointer-events: none; /* Evita que interfiera con clics */
  }

  @keyframes holo-move {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .reverse {
    filter: invert(100%);
  }
</style>
