---
import Login from "../../components/login/login.astro";
import LanguageSelector from "./LanguageSelector.astro";
import Nav from "./Nav.astro";
import Search from "./Search.astro";

const { lang } = Astro.locals;
const language = lang.toString() || "en";

// console.log("LANGUAGE", language);
---

<header class="sticky top-0 z-50 border-b border-zinc-800 bg-zinc-950">
  <div class="container flex h-16 items-center justify-between px-4 md:px-6">
    <div class="flex items-center gap-4">
      <a href="/" class="flex items-center gap-4">
        <img
          src="/img/icon/pokecards_icon.webp"
          alt="PokeCards"
          class="h-9 w-9 inline"
        />
        <h1 id="inicio" class="max-sm:hidden inline-block">Pok√©Cards</h1>
      </a>
      <Nav />
    </div>
    <div class="flex items-center gap-4">
      <Search />

      <LanguageSelector />

      <Login />
    </div>
  </div>
</header>

<style>
  header {
    color: white;
  }

  header h1 {
    position: relative;
    z-index: 20;
    margin: 0;
  }
</style>
