---
import CardGrid from "../../components/card/CardGrid.astro";
import { PokeCardMiniHandler } from "../../handlers/PokeCardMiniHandler";

export const partial = true;

const language = Astro.url.searchParams.get("language") || "en";
const setId = Astro.url.searchParams.get("set") || "base1";

const { cards, error } = await PokeCardMiniHandler.getAll({
  setId: setId,
  language: language,
});
---

<CardGrid setId={setId} cards={cards} error={error} />
