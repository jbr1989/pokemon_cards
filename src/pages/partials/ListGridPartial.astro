---
import CardGrid from "../../components/card/CardGrid.astro";
import ListCardGrid from "../../components/list/ListCardGrid.astro";
import { UserListHandler } from "../../handlers/db/UserListHandler";
import { PokeCardMiniHandler } from "../../handlers/PokeCardMiniHandler";

export const partial = true;

const listId = Astro.url.searchParams.get("list") || "0";

const { list, error } = await UserListHandler.get({
  userListId: parseInt(listId as string, 0),
});
---

<ListCardGrid listId={listId || "0"} cards={list?.cards || []} error={error} />
