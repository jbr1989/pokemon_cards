---
import Layout from "../layouts/Layout.astro";

import { PokeSetHandler } from "../handlers/PokeSetHandler";
import SetGrid from "../components/set/SetGrid.astro";
import type { PokeSetMini } from "../models/PokeSetMini";

const language = "es";
const sets: PokeSetMini[] | null = await PokeSetHandler.getAll({ language });
---

<Layout
  title="All Sets -Pokémon TCG Card Browser"
  description="Browse the all Pokémon card sets."
>
  <section class="py-12 md:py-16 bg-zinc-800">
    <div class="container px-4 md:px-6">
      <div class="flex flex-col items-start gap-4">
        <h2 class="text-2xl font-bold text-white">All Sets</h2>
        <p class="text-zinc-400">Browse the most popular Pokémon card sets.</p>
        <SetGrid sets={sets} />
      </div>
    </div>
  </section>
</Layout>
